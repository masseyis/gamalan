# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/assistant
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/assistant

# API Endpoints - Development
NEXT_PUBLIC_PROJECTS_API_URL=http://localhost:8001
NEXT_PUBLIC_BACKLOG_API_URL=http://localhost:8002
NEXT_PUBLIC_READINESS_API_URL=http://localhost:8003
NEXT_PUBLIC_PROMPT_BUILDER_API_URL=http://localhost:8004
NEXT_PUBLIC_ORCHESTRATOR_API_URL=http://localhost:8005

# API Endpoints - Production (uncomment and update for production)
# NEXT_PUBLIC_PROJECTS_API_URL=https://your-projects-service.shuttle.app
# NEXT_PUBLIC_BACKLOG_API_URL=https://your-backlog-service.shuttle.app
# NEXT_PUBLIC_READINESS_API_URL=https://your-readiness-service.shuttle.app
# NEXT_PUBLIC_PROMPT_BUILDER_API_URL=https://your-prompt-builder-service.shuttle.app
# NEXT_PUBLIC_ORCHESTRATOR_API_URL=https://your-orchestrator-service.shuttle.app

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ORCHESTRATOR_MOCK=true

# AI Assistant Configuration
NEXT_PUBLIC_AI_ASSISTANT_ENABLED=true
NEXT_PUBLIC_SUGGESTIONS_AUTO_REFRESH=true
NEXT_PUBLIC_SUGGESTIONS_REFRESH_INTERVAL=300000

# Development
NODE_ENV=development