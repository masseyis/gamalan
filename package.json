{
  "name": "@salunga/root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "vite": "^5.4.20"
    }
  }
}
